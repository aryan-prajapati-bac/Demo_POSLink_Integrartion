<Window x:Class="POSLinkClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="20">
        <StackPanel>
            <TextBox x:Name="AmountTextBox"
                     Height="30"
                     Margin="0,0,0,10"
                     ToolTip="Enter Amount" />

            <Button Content="Process Payment"
                    Height="30"
                    Click="ProcessPayment_Click" />

            <TextBlock x:Name="ResultTextBlock"
                       Margin="10"
                       TextWrapping="Wrap"
                       FontWeight="Bold"/>
        </StackPanel>
        <StackPanel>
            <TextBox x:Name="AmountTextBox1"
                     Height="30"
                     Margin="0,100,0,10"
                     ToolTip="Enter Amount" />

            <Button Content="Process Payment"
                    Height="30"
                    Click="ProcessPayment_Click1" />

            <TextBlock x:Name="ResultTextBlock1"
                       Margin="10"
                       TextWrapping="Wrap"
                       FontWeight="Bold"/>
        </StackPanel>
        
    </Grid>   
</Window>
